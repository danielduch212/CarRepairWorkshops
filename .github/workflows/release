name: carRepairWorkshops-api-cd

on:
  push:
    branches: 
    -  master
  workflow_dispatch:
  
jobs: 
  build: 
    runs-on: ubuntu-latest
    steps: 
      - name: Checkout
        uses: actions/checkout@v4.1.7
      - name: Setup .NET Core SDK
        uses: actions/setup-dotnet@v4.0.1
        with: 
            dotnet-version: 8.0.x
      - name: Restore dependencies
        run: dotnet restore 
      - name: Build
        run: dotnet build --no-restore
      - name: Publish
        run: dotnet publish ./CarRepairWorkshops/CarRepairWorkshops.API.csproj -o ${{env.DOTNET_ROOT}}/api --no-build 
      


  deploy_dev:
    
